{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "php-app",
      "host": {
        "sourcePath": "/var/app/current/application-source"
      }
    },
    {
      "name": "drupal-settings-file",
      "host": {
        "sourcePath": "/var/app/current/drupal-config/settings.php"
      }
    },
    {
      "name": "dev-tools-s3-config-file",
      "host": {
        "sourcePath": "/var/app/current/dev-tools-config/.s3cfg"
      }
    },
    {
      "name": "dev-tools-bashrc-file",
      "host": {
        "sourcePath": "/var/app/current/dev-tools-config/.bashrc"
      }
    },
    {
      "name": "nginx-config-file",
      "host": {
        "sourcePath": "/var/app/current/nginx-config/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "php-app",
      "image": "nabilboag/php-mysql:latest",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "php-app",
          "containerPath": "/var/www",
          "readOnly": true
        },
        {
          "sourceVolume": "drupal-settings-file",
          "containerPath": "/var/www/drupalv3_uk/app/sites/default/settings.php",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "php-app"
      ],
      "mountPoints": [
         {
          "sourceVolume": "php-app",
          "containerPath": "/var/www",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-config-file",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    },
    {
      "name": "dev-tools",
      "image": "nabilboag/dev-tools:latest",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "dev-tools-s3-config-file",
          "containerPath": "/root/.s3cfg",
          "readOnly": true
        },
        {
          "sourceVolume": "dev-tools-bashrc-file",
          "containerPath": "/root/.bashrc",
          "readOnly": true
        },
        {
          "sourceVolume": "php-app",
          "containerPath": "/var/www",
          "readOnly": true
        },
        {
          "sourceVolume": "drupal-settings-file",
          "containerPath": "/var/www/drupalv3_uk/app/sites/default/settings.php",
          "readOnly": true
        }
      ]
    }
  ]
}
