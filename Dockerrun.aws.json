{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "application-source",
      "host": {
        "sourcePath": "/var/app/current/app"
      }
    },
    {
      "name": "nginxconf",
      "host": {
        "sourcePath": "/var/app/current/docker/production/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "php-fpm",
      "image": "nabilboag/php-fmp-mysqlconnect:latest",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "application-source",
          "containerPath": "/var/www/example"
        }
      ],
      "environment": [{
        "name": "PARAM2",
        "value": "foo"
      }]
    },
    {
      "name": "nginx",
      "image": "nginx",
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "php-fpm"
      ],
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "application-source",
          "containerPath": "/var/www/example",
          "readOnly": true
        },
        {
          "sourceVolume": "nginxconf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}
